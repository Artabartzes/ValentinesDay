<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.valentinesday.MainActivity">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:fontFamily="cursive"
        android:padding="@dimen/base_padding"
        android:text="@string/heading_line"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/base_padding" />

    <View
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_above="@id/signature_text_view"
        android:layout_below="@id/title_text_view"
        android:background="@color/colorPrimary" />

    <View
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary" />

    <ImageView
        android:contentDescription="@string/vase_img_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_text_view"
        android:padding="@dimen/base_padding"
        android:scaleType="centerInside"
        android:src="@drawable/rose_bunch" />

    <TextView
        android:id="@+id/signature_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorLightPink"
        android:fontFamily="cursive"
        android:padding="@dimen/base_padding"
        android:text="@string/signature"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/text_size" />

</RelativeLayout>
